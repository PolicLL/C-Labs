<Window x:Class="Lab3.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Information" Height="400" Width="1200">
    <Grid>
        <TextBox x:Name="textBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Button Content="OK" Width="150" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OKButton_Click"/>
    </Grid>
</Window>
