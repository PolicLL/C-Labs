@page
@model Lab6_2.Pages.Patients.DeleteModel
@{
    ViewData["Title"] = "Delete Patient";
}

<h1>Delete Patient</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Patient.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Patient.Name
        </dd>
        <!-- Add other fields as needed -->
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>