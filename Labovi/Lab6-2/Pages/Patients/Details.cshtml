@page
@model Lab6_2.Pages.Patients.DetailsModel
@{
    ViewData["Title"] = "Patient Details";
}

<h1>Patient Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Patient.Name</dd>
        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Patient.Surname</dd>
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Patient.DateOfBirth.ToShortDateString()</dd>
        <dt class="col-sm-2">Date of Admission</dt>
        <dd class="col-sm-10">@Model.Patient.DateOfPatientAdmission.ToShortDateString()</dd>
        <dt class="col-sm-2">Date of Discharge</dt>
        <dd class="col-sm-10">@Model.Patient.DateOfPatientDischarge?.ToShortDateString()</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Patient.Gender</dd>
        <dt class="col-sm-2">Diagnosis</dt>
        <dd class="col-sm-10">@Model.Patient.Diagnosis</dd>
    </dl>
    <a asp-page="./Index">Back to List</a>
</div>