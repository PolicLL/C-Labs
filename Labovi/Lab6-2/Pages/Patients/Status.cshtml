@page
@model Lab6_2.Pages.Patients.StatusModel
@{
    if (Model.IsActive)
    {
        ViewData["Title"] = "Active Patients";
    }
    else
    {
        ViewData["Title"] = "Inactive Patients";
    }
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <!-- Add other columns as needed -->
            </tr>
        }
    </tbody>
</table>